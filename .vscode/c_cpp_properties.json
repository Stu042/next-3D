{
  "env": {
    "Z88DK": "/Users/admin/Tools/z88dk"      // Path to your z88dk installation 
  },
  "configurations": [
    {
      "name": "z88dk (GCC-style IntelliSense)",
      "compilerPath": "",                    // ? disable probing
      "intelliSenseMode": "gcc-x64",         // ? force GCC-style parsing
      "includePath": [
        "${workspaceFolder}/**",
        "${env:Z88DK}/include"               // point to your z88dk includes
      ],
      "defines": [
        "Z88DK",
        "Z88DK_C"
      ],
      "cStandard": "c11",
      "cppStandard": "c++17"
    }
  ],
  "version": 4
}
