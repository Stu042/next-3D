	"version": "0.2.0",
	"configurations": [
		{
			"type": "dezog",
			"request": "launch",
			"name": "Z80 Debugger",
			"remoteType": "zrcp",
			"zrcp": {
				"hostname": "localhost",
				"port": 10000
//					"skipInterrupt": false,
			},
//			"topOfStack": "Stack_Top",
			"rootFolder": "${fileDirname}",
			"z88dkv2": [
				{
					"path": "${workspaceFolder}/*.lis",
					"srcDirs": [
						""
					],
					"mapFile": "${workspaceFolder}/sun.map",
					"excludeFiles": []
				}
			],
			"disassemblerArgs": {
				"esxdosRst": true
			},
			"load": "${workspaceFolder}/sun.nex",
			"startAutomatically": false,
			"preLaunchTask": "Build"
		}
	],
	"compounds": []
}